{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@features/*": ["packages/ui/src/features/*"],
      "@/*": ["packages/ui/src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/ui" },
    { "path": "./packages/server" },
    { "path": "./shared" }
  ],
  "include": ["packages", "shared", "scripts", "*.ts", "*.js"],
  "exclude": ["node_modules"]
}
