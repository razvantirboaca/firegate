{
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/features/*"],
      "@shared/*": ["../../shared/src/*"],
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "../../shared/src/LangContext.tsx"]
}
